<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="scrollLeft"
            android:text="左移" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="scrollRight"
            android:text="右移"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="scrollUp"
            android:text="上移"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="scrollDown"
            android:text="下移"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="reset1"
            android:text="瞬间复位"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="reset2"
            android:text="平滑复位"

            />
        <Switch
            android:id="@+id/kaiguan"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:textOn="开启"
            android:textOff="关闭"
            android:showText="true"
            />
    </LinearLayout>

    <com.xiniu.datarecycle.baseNoModel.Test.MyImageView
        android:id="@+id/iv_main"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#888888"
        android:scaleType="center"
        android:src="@drawable/ic_launcher" />

</LinearLayout>